@model StarForceMIS.Web.Models.ScheduleViewModel

@{
    ViewBag.Title = "Schedule";
}

<br />
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary ">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-user">&nbsp;</span>
                    Search Guard
                </h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Schedule", "SGManagement", FormMethod.Post, new { @class = "col-md-12" }))
                {
                    <div class="row">
                        <div class="row">
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.QueryString, new { htmlAttributes = new { @class = "form-control", @placeholder = "Search guard here...." } })
                            </div>
                            <input type="submit" value="Search" class="btn btn-primary col-md-3" />
                        </div>
                        @Html.ValidationMessageFor(model => model.QueryString, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <hr />
                        <h4>Result:</h4>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Call Sign</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Francisco Cebu</td>
                                    <td>Crimson</td>
                                    <td><button class="btn btn-sm btn-primary">Details</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <hr />

                        @if (Model != null)
                        {
                        <div class="row">
                            <div class="col-md-3 col-md-offset-4">
                                <img src="~/Content/img/noavatar.jpg" class="img-thumbnail" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.GuardDetails.FirstName, htmlAttributes: new { @class = "col-sm-12 control-label" })
                                <div class="col-sm-12">
                                    <p class="form-control-static">@Model.GuardDetails.FirstName</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.GuardDetails.MiddleName, htmlAttributes: new { @class = "col-sm-12 control-label" })
                                <div class="col-sm-12">
                                    <p class="form-control-static">@Model.GuardDetails.MiddleName</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.GuardDetails.LastName, htmlAttributes: new { @class = "col-sm-12 control-label" })
                                <div class="col-sm-12">
                                    <p class="form-control-static">@Model.GuardDetails.LastName</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.GuardDetails.CallSign, htmlAttributes: new { @class = "col-sm-12 control-label" })
                                <div class="col-sm-12">
                                    <p class="form-control-static">@Model.GuardDetails.CallSign</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.GuardDetails.LicensedNumber, htmlAttributes: new { @class = "col-sm-12 control-label" })
                                <div class="col-sm-12">
                                    <p class="form-control-static">@Model.GuardDetails.LicensedNumber</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.GuardDetails.ExpiredDate, htmlAttributes: new { @class = "col-sm-12 control-label" })
                                <div class="col-sm-12">
                                    <p class="form-control-static">@Model.GuardDetails.ExpiredDate</p>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary ">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-list-alt">&nbsp;</span>
                    Guard Schedules
                </h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Schedule", "SGManagement", FormMethod.Post, new { @class = "col-md-12" }))
                {
                    <div class="row">
                        <div class="row">
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.QueryString, new { htmlAttributes = new { @class = "form-control", @placeholder = "Select Date" } })
                            </div>
                            <input type="submit" value="Search" class="btn btn-primary col-md-3" />
                        </div>
                        @Html.ValidationMessageFor(model => model.QueryString, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <hr />
                        <h4>Morning Shift</h4>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Call Sign</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Francisco Cebu</td>
                                    <td>Lobby</td>
                                    <td>Crimson</td>
                                </tr>
                            </tbody>
                        </table>
                        <hr />
                        <h4>Night Shift</h4>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Call Sign</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Francisco Cebu</td>
                                    <td>Lobby</td>
                                    <td>Crimson</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
