@model StarForceMIS.Web.Models.ScheduleViewModel

@{
    ViewBag.Title = "Schedule";
}

<br />
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary ">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-user">&nbsp;</span>
                    Search Guard
                </h3>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    @using (Html.BeginForm("SearchSchedule", "SGManagement", FormMethod.Get, new { @class = "", @id = "searchGuardForm" }))
                    {
                        <div class="row">
                            <div class="row">
                                <div class="col-md-7">
                                    @Html.EditorFor(model => model.QueryString, new { htmlAttributes = new { @class = "form-control", @placeholder = "Search guard here...." } })
                                </div>
                                <input type="submit" value="Search" class="btn btn-primary col-md-3" />
                            </div>
                            @Html.ValidationMessageFor(model => model.QueryString, "", new { @class = "text-danger" })
                        </div>
                        
                    }
                    <div class="guardDetailsResult">
                        @Html.Partial("partial/_GuardListSchedule")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary ">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-list-alt">&nbsp;</span>
                    Guard Schedules
                </h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Schedule", "SGManagement", FormMethod.Post, new { @class = "col-md-12" }))
                {
                    <div class="row">
                        <div class="row">
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.QueryString, new { htmlAttributes = new { @class = "form-control",@id="datepicker", @placeholder = "Select Date" } })
                            </div>
                            <input type="submit" value="Search" class="btn btn-primary col-md-3" />
                        </div>
                        @Html.ValidationMessageFor(model => model.QueryString, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <hr />
                        <h4>Morning Shift</h4>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Call Sign</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Francisco Cebu</td>
                                    <td>Lobby</td>
                                    <td>Crimson</td>
                                </tr>
                            </tbody>
                        </table>
                        <hr />
                        <h4>Night Shift</h4>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Call Sign</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Francisco Cebu</td>
                                    <td>Lobby</td>
                                    <td>Crimson</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/App/SGManagement/Schedule.js"></script>
}