@model IEnumerable<StarForceMIS.Web.Models.GuardViewModel>

@{
    ViewBag.Title = "Attendance";
}

<br />
<div class="container">
    <h3>@DateTime.UtcNow.ToLongDateString() - Guard Attendance</h3>
    <div class="row">
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                @Html.Partial("partial/_AttendanceTemplate", item)
            }
        }
        else
        {
            <div class="row">
                <div class="alert alert-success col-md-11" role="alert">
                    <strong class="glyphicon glyphicon-ok"></strong> Every guards attendance are now updated!
                </div>
            </div>
        }
    </div>
</div>