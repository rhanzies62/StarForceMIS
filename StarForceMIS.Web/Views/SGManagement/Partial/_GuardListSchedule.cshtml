@model IEnumerable<StarForceMIS.Web.Models.GuardViewModel>
@if (Model != null)
{
    if (Model.Count() > 1)
    {
        <div class="row">
            <hr />
            <div class="guardScheduleList">
                <h4>Result:</h4>

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Call Sign</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName @item.MiddleName @item.LastName</td>
                                <td>@item.CallSign</td>
                                <td class="btnAction"><span class="btn btn-sm btn-primary" data-id="@item.ID">Details</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if(Model.Count() == 1)
    {
        @Html.Action("GetGuardDetails", new { id = Model.FirstOrDefault().ID});
    }
    else
    {
        <div class="row">
            <br />
            <div class="alert alert-danger alert-dismissible" role="alert">
                <strong>Warning!</strong> No record found
            </div>
        </div>
        
    }

}

