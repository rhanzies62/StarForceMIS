@model IEnumerable<StarForceMIS.Web.Models.GuardViewModel>
@{
    Layout = null;
}
<div class="col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title pull-left">
                <span class="glyphicon glyphicon-user">&nbsp;</span>
                StarForce Security Guard List
            </h3>
            <a href="/SGManagement/NewGuard" class="btn btn-sm btn-default pull-right glyphicon glyphicon-plus"></a>
            <div class="clearfix"></div>
        </div>
        
        <div class="panel-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.MiddleName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.CallSign)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.LicensedNumber)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.ExpiredDate)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MiddleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CallSign)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LicensedNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpiredDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <label>Legends:</label>
            <span class="label label-danger">Expired License</span>
            <span class="label label-info">Reliever</span>
        </div>
    </div>
</div>

